# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forex_sentiment
DB_USER=postgres
DB_PASSWORD=your_password

# Discord Webhook URLs
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Schedule settings
SCRAPER_SCHEDULE_TIME=02:00  # UTC
ANALYSIS_SCHEDULE_DAY=Monday
ANALYSIS_SCHEDULE_TIME=06:00  # UTC

# Analysis configuration
SENTIMENT_THRESHOLD=0.0  # Delta threshold for sentiment calculation 

# Actual Data Collection (Phase 2)
ACTUAL_DATA_COLLECTION_ENABLED=true  # Feature flag to enable/disable actual data collection
ACTUAL_DATA_COLLECTION_INTERVAL=4    # Hours between actual data collection runs
ACTUAL_DATA_RETRY_LIMIT=3            # Max retries for missing actual data
ACTUAL_DATA_LOOKBACK_DAYS=7          # How far back to check for missing actual data
ACTUAL_DATA_TIMEOUT_SECONDS=30       # Timeout for actual data collection operations

# Discord Reporting (Phase 4)
INCLUDE_ACTUAL_SENTIMENT_IN_REPORTS=true  # Include actual sentiment data in Discord reports
SHOW_FORECAST_ACCURACY_IN_REPORTS=true   # Show forecast accuracy metrics in reports
SHOW_SURPRISES_IN_REPORTS=true           # Highlight major forecast vs actual differences

# Phase 6: Monitoring & Alerting
ENABLE_DISCORD_ALERTS=true            # Enable Discord alerting system
ALERT_COOLDOWN_HOURS=4               # Hours between similar alert types 